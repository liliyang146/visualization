circleFun <- function(a,b) {
  iRange <- 1:length(a)
  vv <- sapply(iRange, function(i) {
    if (a[i] >= 2*b[i]) { 
      return("\\Circle")
    } else if (a[i] > b[i]) {
      return("\\RIGHTcircle")
    } else if (b[i] >= 2*a[i]) {
      return("\\CIRCLE")
    } else {
      return("\\LEFTcircle")
    }
  })
  return(vv)
}

